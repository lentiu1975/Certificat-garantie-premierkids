<%- include('partials/header') %>

<div class="module-launcher">
    <div class="row g-4 mb-4">
        <!-- Certificate Garanție -->
        <div class="col-md-6">
            <a href="/certificates/auto" class="module-card module-certificates">
                <div class="module-icon">
                    <i class="bi bi-file-earmark-check"></i>
                </div>
                <div class="module-info">
                    <h3>Certificate Garanție</h3>
                    <p>Generare automată certificate de garanție din facturi SmartBill</p>
                </div>
                <div class="module-arrow">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- Prețuri -->
        <div class="col-md-6">
            <a href="/prices" class="module-card module-preturi">
                <div class="module-icon">
                    <i class="bi bi-currency-exchange"></i>
                </div>
                <div class="module-info">
                    <h3>Prețuri</h3>
                    <p>Management și sincronizare prețuri pe multiple canale de vânzare</p>
                </div>
                <div class="module-arrow">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <!-- Crawler -->
        <div class="col-md-6">
            <a href="#" class="module-card module-crawler" onclick="showComingSoon('Crawler'); return false;">
                <div class="module-icon">
                    <i class="bi bi-robot"></i>
                </div>
                <div class="module-info">
                    <h3>Crawler</h3>
                    <p>Monitorizare și extragere date de pe site-uri externe</p>
                    <span class="badge bg-secondary">În curând</span>
                </div>
                <div class="module-arrow">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- Piese de schimb -->
        <div class="col-md-6">
            <a href="#" class="module-card module-piese" onclick="showComingSoon('Piese de schimb'); return false;">
                <div class="module-icon">
                    <i class="bi bi-gear"></i>
                </div>
                <div class="module-info">
                    <h3>Piese de schimb</h3>
                    <p>Gestiune inventar piese și componente</p>
                    <span class="badge bg-secondary">În curând</span>
                </div>
                <div class="module-arrow">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Nomenclator -->
        <div class="col-12">
            <a href="/nomenclator" class="module-card module-nomenclator">
                <div class="module-icon">
                    <i class="bi bi-box-seam"></i>
                </div>
                <div class="module-info">
                    <h3>Nomenclator Produse</h3>
                    <p>Configurare produse, garanții și parametri tehnici - folosit de toate modulele</p>
                </div>
                <div class="module-arrow">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </a>
        </div>
    </div>
</div>

<script>
function showComingSoon(moduleName) {
    // Creare alert toast
    const alertDiv = document.createElement('div');
    alertDiv.className = 'alert alert-info alert-floating';
    alertDiv.innerHTML = `<i class="bi bi-info-circle me-2"></i>Modulul <strong>${moduleName}</strong> este în curs de dezvoltare.`;
    document.body.appendChild(alertDiv);

    setTimeout(() => {
        alertDiv.style.opacity = '0';
        setTimeout(() => alertDiv.remove(), 300);
    }, 3000);
}
</script>

<%- include('partials/footer') %>
</body>
</html>
