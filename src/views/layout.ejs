<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Certificate Garanție PremierKids</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2c5aa0;
            --sidebar-bg: #1a1a2e;
        }
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
        }
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 260px;
            height: 100vh;
            background: var(--sidebar-bg);
            padding: 20px 0;
            overflow-y: auto;
            z-index: 1000;
        }
        .sidebar .logo {
            padding: 0 20px 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 20px;
        }
        .sidebar .logo h4 {
            color: white;
            margin: 0;
            font-weight: 600;
        }
        .sidebar .logo small {
            color: rgba(255,255,255,0.5);
            font-size: 12px;
        }
        .sidebar-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .sidebar-nav li {
            margin: 2px 10px;
        }
        .sidebar-nav a {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.2s;
        }
        .sidebar-nav a:hover, .sidebar-nav a.active {
            background: rgba(255,255,255,0.1);
            color: white;
        }
        .sidebar-nav a i {
            margin-right: 12px;
            font-size: 18px;
        }
        .sidebar-nav .nav-section {
            padding: 15px 20px 8px;
            color: rgba(255,255,255,0.4);
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .main-content {
            margin-left: 260px;
            padding: 30px;
            min-height: 100vh;
        }
        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        .top-bar h1 {
            font-size: 24px;
            font-weight: 600;
            margin: 0;
            color: #333;
        }
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }
        .card-header {
            background: white;
            border-bottom: 1px solid #eee;
            font-weight: 600;
            padding: 15px 20px;
        }
        .btn-primary {
            background: var(--primary-color);
            border-color: var(--primary-color);
        }
        .btn-primary:hover {
            background: #234a8a;
            border-color: #234a8a;
        }
        .badge-new {
            background: #ff6b6b;
            color: white;
        }
        .table th {
            font-weight: 600;
            color: #666;
            border-bottom: 2px solid #eee;
        }
        .alert-floating {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
            animation: slideIn 0.3s ease;
        }
        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 6px;
        }
        .status-dot.active { background: #28a745; }
        .status-dot.inactive { background: #dc3545; }
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255,255,255,0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }
        .user-menu {
            position: relative;
        }
        .user-menu .dropdown-menu {
            min-width: 200px;
        }
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s;
            }
            .sidebar.show {
                transform: translateX(0);
            }
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="logo">
            <h4>PremierKids</h4>
            <small>Certificate Garanție</small>
        </div>

        <ul class="sidebar-nav">
            <li><a href="/" class="<%= title === 'Dashboard' ? 'active' : '' %>">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a></li>

            <li class="nav-section">Certificate</li>
            <li><a href="/certificates/auto" class="<%= title.includes('Automat') ? 'active' : '' %>">
                <i class="bi bi-play-circle"></i> Procesare Automată
            </a></li>
            <li><a href="/certificates/manual" class="<%= title.includes('Manual') ? 'active' : '' %>">
                <i class="bi bi-file-earmark-plus"></i> Generare Manuală
            </a></li>
            <li><a href="/history" class="<%= title === 'Istoric Certificate' ? 'active' : '' %>">
                <i class="bi bi-clock-history"></i> Istoric
            </a></li>

            <li class="nav-section">Produse</li>
            <li><a href="/products" class="<%= title === 'Nomenclator Produse' ? 'active' : '' %>">
                <i class="bi bi-box-seam"></i> Nomenclator
                <% if (typeof newProductsCount !== 'undefined' && newProductsCount > 0) { %>
                    <span class="badge badge-new ms-auto"><%= newProductsCount %></span>
                <% } %>
            </a></li>

            <% if (typeof user !== 'undefined' && user.isAdmin) { %>
            <li class="nav-section">Administrare</li>
            <li><a href="/settings" class="<%= title === 'Setări' ? 'active' : '' %>">
                <i class="bi bi-gear"></i> Setări
            </a></li>
            <% } %>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="top-bar">
            <h1><%= title %></h1>
            <div class="user-menu dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle"></i>
                    <%= typeof user !== 'undefined' ? user.username : 'Utilizator' %>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                        <i class="bi bi-key"></i> Schimbă parola
                    </a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="/auth/logout">
                        <i class="bi bi-box-arrow-right"></i> Deconectare
                    </a></li>
                </ul>
            </div>
        </div>

        <%- body %>
    </main>

    <!-- Modal Schimbare Parolă -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Schimbare Parolă</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="changePasswordForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Parola actuală</label>
                            <input type="password" class="form-control" name="currentPassword" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Parola nouă</label>
                            <input type="password" class="form-control" name="newPassword" required minlength="8">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirmă parola nouă</label>
                            <input type="password" class="form-control" name="confirmNewPassword" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anulează</button>
                        <button type="submit" class="btn btn-primary">Salvează</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Container pentru alerte floating -->
    <div id="alertContainer"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Funcție pentru afișare alerte
        function showAlert(message, type = 'success') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-floating alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.getElementById('alertContainer').appendChild(alertDiv);

            setTimeout(() => {
                alertDiv.classList.remove('show');
                setTimeout(() => alertDiv.remove(), 150);
            }, 5000);
        }

        // Funcție pentru loading
        function showLoading() {
            const overlay = document.createElement('div');
            overlay.className = 'loading-overlay';
            overlay.id = 'loadingOverlay';
            overlay.innerHTML = '<div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>';
            document.body.appendChild(overlay);
        }

        function hideLoading() {
            const overlay = document.getElementById('loadingOverlay');
            if (overlay) overlay.remove();
        }

        // Handler schimbare parolă
        document.getElementById('changePasswordForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);

            if (formData.get('newPassword') !== formData.get('confirmNewPassword')) {
                showAlert('Parolele noi nu coincid', 'danger');
                return;
            }

            try {
                const response = await fetch('/auth/change-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        currentPassword: formData.get('currentPassword'),
                        newPassword: formData.get('newPassword'),
                        confirmNewPassword: formData.get('confirmNewPassword')
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert('Parola a fost schimbată cu succes', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('changePasswordModal')).hide();
                    form.reset();
                } else {
                    showAlert(data.error || 'Eroare la schimbarea parolei', 'danger');
                }
            } catch (error) {
                showAlert('Eroare la schimbarea parolei', 'danger');
            }
        });
    </script>
</body>
</html>
